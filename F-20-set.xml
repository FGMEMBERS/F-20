   </tank>
   <tank n="1">
    <level-gal_us archive="y">407</level-gal_us>
   </tank>
   <tank n="2">
    <level-gal_us archive="y">316</level-gal_us>
   </tank>
   <tank n="3">
    <level-gal_us archive="y">302.3</level-gal_us>
   </tank>
   <tank n="4">
    <level-gal_us archive="y">302.3</level-gal_us>
   </tank>
</fuel>
