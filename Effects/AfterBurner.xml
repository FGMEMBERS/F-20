<?xml version="1.0"?>

<PropertyList>

	<particlesystem>
		<name>Afterburner</name>
		<texture>annulus.png</texture>
		<emissive>true</emissive>
		<lighting>false</lighting>

		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</offsets>

		<condition>
		 <and>
		 <greater-than>
				<property>/controls/engines/engine/throttle</property>
				<value>0.8</value>
         </greater-than>				
		 <greater-than>
				<property>engines/engine[0]/n1</property>
				<value>90</value>
         </greater-than>
          <property>engines/engine[0]/running</property>
         </and>
		</condition>


		<attach>local</attach>

		<placer>
			<type>point</type>
		</placer>

		<shooter>
			<theta-min-deg>89</theta-min-deg>
			<theta-max-deg>91</theta-max-deg>
			<phi-min-deg>-1</phi-min-deg>
			<phi-max-deg>1</phi-max-deg>
			<speed-mps>
                <value>200.0</value>
                <spread>200.0</spread>
			</speed-mps>
			<rotation-speed>
				<x-max-deg-sec>15</x-max-deg-sec>
				<x-min-deg-sec>-15</x-min-deg-sec>
				<y-max-deg-sec>15</y-max-deg-sec>
				<y-min-deg-sec>-15</y-min-deg-sec>
				<z-max-deg-sec>15</z-max-deg-sec>
				<z-min-deg-sec>-15</z-min-deg-sec>
			</rotation-speed>
		</shooter>

		<counter>
			<particles-per-sec>
				<value>5000</value>                
				<spread>0.0</spread>
			</particles-per-sec>
		</counter>

		<align>billboard</align>
                
		<particle>
			<start>
				<color>
					<red>
						<value>0.92</value>
					</red>
					<green>
						<value>0.47</value>
					</green>
					<blue>
						<value>1.0</value>
					</blue>
					<alpha>
						<value>0.05</value>
					</alpha>
				</color>
				<size>
					<value>0.4</value>
				</size>
			</start>
			<end>
				<color>
					<red>
						<value>0.0</value>
					</red>
					<green>
						<value>0.0</value>
					</green>
					<blue>
						<value>0.8</value>
					</blue>
					<alpha>
						<value>0.03</value>
					</alpha>
				</color>
				<size>
					<value>0.3</value>
				</size>
			</end>
			<life-sec>
			<value>.02</value>
			</life-sec>
			<mass-kg>0.00001</mass-kg>
			<radius-m>0.0</radius-m>
		</particle>

		<program>
			<fluid>air</fluid>
			<gravity>false</gravity>
			<wind>false</wind>
		</program>

	</particlesystem>

</PropertyList>
