<?xml version="1.0"?>

<PropertyList>
	<enable3d>true</enable3d>

	<ladder>
		<name>Pitch Ladder</name>
		<type>pitch</type>
		<x>-10</x>
		<y>-90.0</y>
		<width>18</width>
		<height>180</height>
		<roll-input>
			<property>orientation/roll-deg</property>
		</roll-input>
		<pitch-input>
			<property>orientation/pitch-deg</property>
		</pitch-input>
		<compression-factor>10.00</compression-factor>
		<display-span>16.0</display-span>
		<divisions>5.0</divisions>
		<screen-hole>0</screen-hole>
		<lbl-pos>0</lbl-pos>
		<enable-fuselage-ref-line>false</enable-fuselage-ref-line>
		<enable-target-spot>false</enable-target-spot>
		<enable-velocity-vector>true</enable-velocity-vector>
		<enable-drift-marker>false</enable-drift-marker>
		<enable-alpha-bracket>false</enable-alpha-bracket>
		<enable-energy-marker>false</enable-energy-marker>
		<enable-climb-dive-marker>false</enable-climb-dive-marker>
		<enable-glide-slope-marker>true</enable-glide-slope-marker>
		<glide-slope>3.0</glide-slope>
		<enable-energy-worm>false</enable-energy-worm>
		<enable-waypoint-marker>true</enable-waypoint-marker>
		 <zero-bar-overlength>150</zero-bar-overlength>
	</ladder>

	<label>
		<name>KIAS</name>
		<x>-40</x>
		<y>-35</y>
		<width>15</width>
		<height>6</height>
		<input>
			<property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
		</input>
        <box>true</box>
		<format>%4.0f</format>
		<halign>right</halign>
	</label>

	<label>
		<name>Altitude</name>
		<x>25</x>
		<y>-35</y>
		<width>20</width>
		<height>6</height>
		<input>
			<property>instrumentation/altimeter/indicated-altitude-ft</property>
		</input>
        <box>true</box>
        <digit>3</digit>
		<format>%5.0f</format>
		<halign>right</halign>
	</label>
    
    	<label>
		<name>Waypoint</name>
		<x>22</x>
		<y>-41</y>
		<width>1</width>
		<height>1</height>
		<input>
			<property>autopilot/route-manager/wp/dist</property>
		</input>
        <box>false</box>
        <digit>3</digit>
		<format>WPT %3.1f</format>
		<halign>left</halign>
	</label>

	<tape>
		<name>Heading</name>
		<x>-45</x>
		<y>10</y>
		<width>100.0</width>
		<height>3</height>
		<input>
			<property>orientation/heading-deg</property>
			<factor>0.1</factor>
			<max>85</max>
			<min>-85</min>
		</input>
		<major-divisions>1</major-divisions>
		<minor-divisions>0.5</minor-divisions>
		<display-span>4.0</display-span>
		<option>left</option>
		<option>horizontal</option>
		<tick-bottom>false</tick-bottom>
		<tick-top>true</tick-top>
		<tick-right>false</tick-right>
		<tick-left>false</tick-left>
		<cap-bottom>false</cap-bottom>
		<cap-top>false</cap-top>
		<cap-right>false</cap-right>
		<cap-left>false</cap-left>
		<marker-offset>0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
	</tape>
    
    
    <label>
		<name>Alpha</name>
		<x>-23</x>
		<y>-41</y>
		<width>1</width>
		<height>1</height>
		<input>
			<property>/orientation/alpha-deg</property>
		</input>
		<format>cx %1.1f</format>
		<halign>right</halign>
	</label>
    
    <label>
		<name>G Load</name>
		<x>-23</x>
		<y>-48</y>
		<width>1</width>
		<height>1</height>
		<input>
			<property>/accelerations/pilot/z-accel-fps_sec</property>
			<factor>-0.03108095</factor>
			<damp>1.0</damp>
		</input>
		<format>g   %2.1f</format>
		<halign>right</halign>
	</label>

	<label>
		<name>MACH Number</name>
		<x>-23</x>
		<y>-55</y>
		<width>1</width>
		<height>1</height>
		<input>
			<property>/velocities/mach</property>
		</input>
		<format>M  %1.2f</format>
		<halign>right</halign>
	</label>
    
<turn-bank-indicator>
  <name>Turn Bank Indicator</name>
  <x>-50</x>
  <y>-90</y>
  <width>100</width>
  <height>100</height>
  <bank-input>
   <property>/orientation/roll-deg</property>
  </bank-input>
  <sideslip-input>
   <property>/orientation/side-slip-deg</property>
  </sideslip-input>
  <bank-scale>true</bank-scale>
  <bank-scale-radius>100</bank-scale-radius>
  <option>bottom</option>
 </turn-bank-indicator>

</PropertyList>
